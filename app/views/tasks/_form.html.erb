<%= form_for(task) do |f| %>

  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_tasks.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :title, '何を' %>
  <%= f.text_field :content %>

  <%= f.label :content, 'どうするか' %>
  <%= f.text_field :content %>

  <%= f.submit 'やる' %>
<% end %>